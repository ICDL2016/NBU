.header-container
    header.header
        a(href="").header__logo
            img(src="assets/i/logo_small.png")
        .header__text
            h1.header__title NEW BUSINESS UNIVERSITY
            .header__translation НОВЫЙ БИЗНЕС УНИВЕРСИТЕТ
.header__nav.nav
    .header__actions
        a.header__user.user(href="")
            .user__img
                .fa.fa-user
            .user__data Иван Иванов
        .header__toggle.js-toggler
            .fa.fa-bars
    .nav__authorization.authorization-tabs.js-tabs
        .authorization-tabs__headings
            .authorization-tabs__header.js-tabs-head Вход
        .authorization-tabs__content
            .authorization-tabs__item.js-tabs-item.active
                form
                    input(type="email",placeholder="E-mail")
                    input(type="password",placeholder="Пароль")
                    button(type="submit") Вход
                    a.authorization-tabs__link(href="") Забыли пароль?
    ul.nav__list
        li.nav__item
            a.nav__link.js-authorize(href="#") Вход
        li.nav__item
            a.nav__link(href="#") Контакты
        li.nav__item
            a.nav__link(href="#") О NBU
        li.nav__item
            a.nav__link(href="#") Блог
    form.custom-search-input
        input(type="text")
        button(type="submit").fa.fa-search